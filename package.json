{
  "name": "alephium-mining-proxy",
  "version": "0.0.1",
  "description": "Alephium mining proxy",
  "homepage": "https://github.com/alephium/mining-proxy",
  "bugs": {
    "url": "https://github.com/alephium/mining-proxy"
  },
  "author": "alephium",
  "scripts": {
    "start": "node ./init.js",
    "build": "npx pkg ."
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/alephium/mining-proxy.git"
  },
  "dependencies": {
    "@napi-rs/blake-hash": "1.3.0",
    "binary-parser": "2.0.2",
    "bignum": "0.13.1",
    "base58-native": "*"
  },
  "pkg": {
    "scripts": "*.js",
    "assets": "node_modules/**/*",
    "outputPath": "bin",
    "targets": [ "node14-linux-x64", "node14-macos-x64", "node14-windows-x64" ]
  },
  "bin": {
    "proxy": "init.js"
  },
  "engines": {
    "node": ">=14"
  }
}
