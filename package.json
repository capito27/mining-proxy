{
  "name": "alephium-mining-proxy",
  "version": "0.0.1",
  "description": "Alephium mining proxy",
  "homepage": "https://github.com/alephium/mining-proxy",
  "bugs": {
    "url": "https://github.com/alephium/mining-proxy"
  },
  "author": "alephium",
  "scripts": {
    "start": "node ./init.js",
    "build": "npx pkg . -C Brotli"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/alephium/mining-proxy.git"
  },
  "dependencies": {
    "base58-native": "*",
    "bignumber.js": "^9.0.2",
    "@napi-rs/blake-hash": "1.3.0",
    "binary-parser": "2.0.2"
  },
  "pkg": {
    "scripts": "*.js",
    "assets": "node_modules/**/*",
    "outputPath": "bin"
  },
  "bin": {
    "proxy": "init.js"
  },
  "engines": {
    "node": ">=14"
  }
}
